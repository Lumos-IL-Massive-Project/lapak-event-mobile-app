<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.paymentbanktransfer.PaymentBankTransferActivity">

    <include
        android:id="@+id/customTopBar"
        layout="@layout/global_top_app_bar" />

    <LinearLayout
        android:id="@+id/transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvMasukkanInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan Info Kartu"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium"
                android:lineSpacingExtra="7sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/norekeningContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="No. Rekening"
                android:textColor="@color/gray_900"
                android:textSize="12sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_payment"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:text="78737489977"
                android:paddingLeft="14dp"
                android:drawableEnd="@drawable/add_on_file_copy_small"
                android:textSize="12sp"
                android:inputType="number"
                android:textColor="@color/gray_900"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalpembayaranContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="Total Pembayaran"
                android:textColor="@color/gray_900"
                android:textSize="12sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_payment"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:text="Rp28.920.000"
                android:inputType="number"
                android:paddingHorizontal="14dp"
                android:paddingVertical="12dp"
                android:textColorHint="@color/gray_900"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/panduanpembayaranContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Panduan Pembayaran"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/gray_900"
                android:textSize="12sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/custom_input_payment"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:hint="Transfer Melalui ATM"
                android:drawableEnd="@drawable/round_arrow_right_24"
                android:drawablePadding="8dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="12dp"
                android:textColorHint="@color/gray_500"
                android:textSize="12sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_payment"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:hint="Transfer Melalui Mobile Banking"
                android:drawableEnd="@drawable/round_arrow_right_24"
                android:drawablePadding="8dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="12dp"
                android:textColorHint="@color/gray_500"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/uploadbuktipembayaranButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_medium"
        android:paddingVertical="10dp"
        android:text="Upload Bukti Pembayaran"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/transfer"/>

</LinearLayout>