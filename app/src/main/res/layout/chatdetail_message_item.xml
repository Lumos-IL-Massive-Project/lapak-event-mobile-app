<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp">

    <TextView
        android:id="@+id/tvDateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/messageSendContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDateHeader"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_send_round_box"
            android:backgroundTint="@color/purple_800"
            android:fontFamily="@font/inter_regular"
            android:maxWidth="300dp"
            android:padding="8dp"
            android:text="This is a sample message that will appear"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageReceiveContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDateHeader"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:gravity="top"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/grand_galas_eo" />

        <TextView
            android:id="@+id/tvReceiveMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_receive_round_box"
            android:backgroundTint="@color/gray_200"
            android:fontFamily="@font/inter_regular"
            android:maxWidth="300dp"
            android:padding="8dp"
            android:text="This is a sample message that will appear"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>