<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.testimonidetail.TestimoniDetailActivity">

    <include
        android:id="@+id/customTopBar"
        layout="@layout/global_top_app_bar"
        android:layout_width="408dp"
        android:layout_height="63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customTopBar" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Amel Lia"
        android:textSize="10sp"
        android:textStyle="normal"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/gray_900"
        app:layout_constraintStart_toEndOf="@id/ivUserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivUserProfile" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/inter_thin"
        android:text="18 Desember 2019"
        android:textColor="@color/gray_500"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivUserProfile" />

    <RatingBar
        android:id="@+id/rbRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:numStars="5"
        android:rating="5"
        android:stepSize="0.5"
        android:progressTint="@color/orange"
        app:layout_constraintStart_toEndOf="@id/ivUserProfile"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="14dp"
        android:text="Mereka mewujudkan acara product launching kami menjadi pengalaman yang tak terlupakan. Perhatian mereka terhadap detail, ide-ide kreatif, dan dedikasi mereka terhadap visi kami sangat luar biasa."
        android:fontFamily="@font/inter_regular"
        android:textSize="10sp"
        android:lineHeight="16sp"
        android:textStyle="normal"
        android:textColor="@color/gray_700"
        app:layout_constraintStart_toEndOf="@id/ivUserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbRatingBar" />

    <ImageView
        android:id="@+id/ivRoundReplay"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="365dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/round_reply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

    <TextView
        android:id="@+id/tvLihatBalasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="Balasan Dari Vendor"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivRoundReplay"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />



    <ImageView
        android:id="@+id/ivEventProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/grand_galas_eo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLihatBalasan" />

    <TextView
        android:id="@+id/tvNameEventOrganizer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Grand Galas EO"
        android:textSize="10sp"
        android:textStyle="normal"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/gray_700"
        app:layout_constraintStart_toEndOf="@id/ivEventProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivEventProfile" />

    <TextView
        android:id="@+id/tvDateEventOrganizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="39dp"
        android:text="18 Desember 2019"
        android:textSize="10sp"
        android:textStyle="normal"
        android:fontFamily="@font/inter_thin"
        android:textColor="@color/gray_500"
        app:layout_constraintStart_toEndOf="@id/ivEventProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivEventProfile" />

    <TextView
        android:id="@+id/tvDescriptionEventOrganizer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/inter_regular"
        android:maxWidth="300dp"
        android:text="Dear AMEL LIA,\n\nThank you very much for choosing our hotel as your destination in Surabaya and for taking time to share your recent experience. It's absolutely delightful to see that you had a fantastic experience with us.\n\nIt was a pleasure to have you here and we will be looking\n\nforward to welcoming you back in your future event.\n\nSincerely.\n\nGeneral Manager\nGaurav Saxena"
        android:textColor="@color/gray_700"
        android:textSize="10sp"
        android:lineHeight="16sp"
        android:textStyle="normal"
        android:justificationMode="inter_word"
        app:layout_constraintEnd_toEndOf="@+id/tvNameEventOrganizer"
        app:layout_constraintStart_toEndOf="@id/ivEventProfile"
        app:layout_constraintTop_toBottomOf="@id/tvNameEventOrganizer" />

</androidx.constraintlayout.widget.ConstraintLayout>