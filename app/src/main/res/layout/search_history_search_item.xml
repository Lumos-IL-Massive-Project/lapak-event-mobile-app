<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

    <LinearLayout
        android:id="@+id/btnHistorySearchItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/squircle_ripple_effect"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchHistoryIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="Search History Icon"
            android:src="@drawable/ic_clock" />

        <TextView
            android:id="@+id/searchHistoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Product Launching"
            android:textAlignment="center"
            android:textColor="@color/gray_700"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/searchHistoryDeleteIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/squircle_ripple_effect"
        android:clickable="true"
        android:contentDescription="Search History Icon"
        android:src="@drawable/ic_trash" />
</LinearLayout>
