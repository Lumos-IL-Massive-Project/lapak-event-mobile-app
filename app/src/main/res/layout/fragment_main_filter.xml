<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/slider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_medium"
            android:text="Filter"
            android:textColor="@color/gray_900"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semi_bold"
            android:text="Reset"
            android:textAlignment="textEnd"
            android:textColor="@color/purple_700"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/inter_medium"
        android:text="Urut Berdasarkan"
        android:textColor="@color/gray_900"
        android:textSize="14sp" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Paling Sesuai"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terbaru"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Tertinggi"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Terendah"
            app:checkedIconEnabled="false" />
    </com.google.android.material.chip.ChipGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/inter_medium"
        android:text="Batas Harga"
        android:textColor="@color/gray_900"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <LinearLayout
            style="@style/pill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_column_pill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:paddingHorizontal="12dp"
                android:text="Rp"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:digits="01234567890"
                android:gravity="center"
                android:hint="Terendah"
                android:inputType="numberDecimal"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="@font/inter_medium"
            android:text="-"
            android:textColor="@color/gray_900"
            android:textSize="24sp" />

        <LinearLayout
            style="@style/pill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_column_pill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:paddingHorizontal="12dp"
                android:text="Rp"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:digits="01234567890"
                android:gravity="center"
                android:hint="Tertinggi"
                android:inputType="numberDecimal"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_medium"
            android:text="Lokasi EO"
            android:textColor="@color/gray_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvShowAllLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semi_bold"
            android:text="Lihat Semua"
            android:textAlignment="textEnd"
            android:textColor="@color/purple_700"
            android:textSize="14sp" />
    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Jabodetabek"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bandung"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medan"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surabaya"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            style="@style/customChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogjakarta"
            app:checkedIconEnabled="false" />
    </com.google.android.material.chip.ChipGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_filterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/inter_semi_bold"
        android:paddingVertical="10dp"
        android:text="Filter"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="8dp" />
</LinearLayout>