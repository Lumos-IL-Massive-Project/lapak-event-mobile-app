<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConnectUs" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">@color/black</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="ButtonWithIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="minWidth">48dp</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="ButtonOutlineWithoutIcon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonWithoutIcon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="pill">
        <item name="android:paddingHorizontal" tools:targetApi="o">12dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">8dp</item>
    </style>

    <style name="customChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="android:textAppearance">@style/customChipText</item>
    </style>

    <style name="customChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/purple_700</item>
        <item name="colorControlHighlight">@color/purple_700</item>
        <item name="colorControlActivated">@color/purple_700</item>
    </style>
</resources>