<resources>
    <!-- Base application theme. -->
    <style name="Theme.ConnectUs" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">@color/black</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="ButtonWithIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="minWidth">48dp</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/purple_700</item>
        <item name="colorControlHighlight">@color/purple_700</item>
        <item name="colorControlActivated">@color/purple_700</item>
    </style>
</resources>